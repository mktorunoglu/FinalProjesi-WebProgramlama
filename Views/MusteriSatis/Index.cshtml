@using LSYS.Models.Entity
@model List<TBL_SATIS>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Satın Alınanlar</h2>



<table class=" table table-bordered">
    <tr>

        <td>BAYİ ID</td>
        <td>MÜŞTERİ ADI SOYADI</td>
        <td>ÜRÜN ADI</td>
        <td>SATIŞ FİYAT</td>
        <td>ADET</td>

        <td>MALİYET</td>
        <td>TARİH</td>
        @*<td>Güncelle</td>*@


    </tr>


    @foreach (var sts in Model)
    {
        <tr>

            <td>@sts.BAYI_ID</td>
            <td>@sts.TBL_MUSTERI.AD&nbsp @sts.TBL_MUSTERI.SOYAD</td>
            <td>@sts.TBL_URUN.URUN_ADI</td>
            <td>@sts.SATIS_FIYAT</td>
            <td>@sts.ADET</td>

            <td>@sts.MALIYET</td>
            <td>@sts.SATIS_TARIH</td>

            @*<td><a href="/Satis/SatisGetir/@sts.BAYI_ID" class="btn btn-success">Güncelle</a></td>*@

        </tr>
    }

</table>